# Pi Telegram Bot Configuration

# ==============================================================================
# TELEGRAM
# ==============================================================================

# Get from @BotFather in Telegram
TELEGRAM_BOT_TOKEN=YOUR_TOKEN_HERE

# Your bot's username (without @)
TELEGRAM_BOT_USERNAME=your_bot_name

# ==============================================================================
# PI AGENT
# ==============================================================================

# Working directory for pi agent
PI_WORKING_DIRECTORY=./

# ==============================================================================
# DATABASE
# ==============================================================================

# SQLite database URL (or other databases supported by pi)
DATABASE_URL=sqlite:///pi-telegram.db

# ==============================================================================
# API
# ==============================================================================

# API server port
API_PORT=8080

# Enable API debug mode
API_DEBUG=false

# ==============================================================================
# SECURITY
# ==============================================================================

# Comma-separated list of allowed Telegram user IDs (optional)
# Leave empty to allow all users in development
ALLOWED_USERS=

# Enable rate limiting
ENABLE_RATE_LIMIT=true

# Rate limit: messages per minute per user
RATE_LIMIT_PER_MINUTE=30

# ==============================================================================
# FEATURES
# ==============================================================================

# Enable persistent session storage
ENABLE_SESSION_PERSISTENCE=true

# Enable conversation history tracking
ENABLE_CONVERSATION_HISTORY=true

# Maximum messages to keep in conversation history
MAX_CONVERSATION_HISTORY=50

# ==============================================================================
# LOGGING
# ==============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ==============================================================================
# ENVIRONMENT
# ==============================================================================

# Environment: development or production
NODE_ENV=development
