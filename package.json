{
  "name": "pi-telegram",
  "version": "0.1.0",
  "description": "Telegram bot that creates persistent pi sessions in tmux - one bot, many threads",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts"
  },
  "keywords": [
    "pi",
    "telegram",
    "bot",
    "tmux",
    "persistent-sessions"
  ],
  "author": "Harpreet Cheema",
  "license": "MIT",
  "dependencies": {
    "node-telegram-bot-api": "^0.63.0",
    "dotenv": "^16.3.1",
    "pino": "^8.17.0",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
